<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/published_At_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="2 hours ago"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/source_name_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="BBC News"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/published_At_txt_view"
            app:layout_constraintStart_toEndOf="@+id/published_At_txt_view"
            app:layout_constraintTop_toTopOf="@+id/published_At_txt_view" />

        <ImageView
            android:id="@+id/news_image_view"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/description_txt_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/source_name_txt_view"
            app:srcCompat="@drawable/image_icon" />

        <TextView
            android:id="@+id/title_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="Apple admits slowing down older iphones"
            android:textColor="#14618B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/news_image_view"
            app:layout_constraintStart_toStartOf="@+id/published_At_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/published_At_txt_view" />

        <TextView
            android:id="@+id/description_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:text="Customers have long suspected iphones slow down over time."
            android:textColor="#14618B"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/news_image_view"
            app:layout_constraintStart_toStartOf="@+id/published_At_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/title_txt_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>